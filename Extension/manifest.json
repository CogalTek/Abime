{
    "manifest_version": 3,
    "name": "Abime",
    "description": "Ouvre un popup sur une page locale sp√©cifique",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["file://*/*","<all_urls>"],
        "js": ["content.js"],
        "all_frames": true
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["images/*.png"],
      "matches": ["<all_urls>"]
    }]
  }
